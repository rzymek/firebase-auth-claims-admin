{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" ci",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "predeploy": [
      "npm --prefix web ci",
      "npm --prefix web run build"
    ],
    "public": "web/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/authConfig",
        "function": "authConfig"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
